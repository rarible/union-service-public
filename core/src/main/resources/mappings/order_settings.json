{
  "index": {
    "number_of_shards": 6,
    "number_of_replicas": 1,
    "refresh_interval": "1s",
    "sort.field": [ "date", "orderId" ],
    "sort.order": [ "desc", "desc" ]
  },
  "analysis": {
    "filter": {
      "english_stemmer": {
        "type": "stemmer",
        "language": "english"
      },
      "english_stop": {
        "type": "stop",
        "stopwords": "_english_"
      }
    },
    "char_filter": {
      "camel_case": {
        "type": "pattern_replace",
        "pattern": "(?<=\\p{Lower})(?=\\p{Upper})",
        "replacement": " "
      },
      "join": {
        "type": "pattern_replace",
        "pattern": "(\\s)",
        "replacement": ""
      },
      "initials": {
        "type": "pattern_replace",
        "pattern": "\\b(\\w)\\w*\\b",
        "replacement": "$1"
      },
      "special_character": {
        "type": "pattern_replace",
        "pattern": "[\\x{0021}-\\x{002F}|\\x{003A}-\\x{0040}|\\x{007B}-\\x{007E}|\\x{02B0}-\\x{02FF}|\\x{2010}-\\x{205E}]",
        "replacement": " "
      },
      "blockchain_address": {
        "type": "pattern_replace",
        "pattern": "\\w+-(.+)",
        "replacement": "$1"
      }
    }
  }
}
